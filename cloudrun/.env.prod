# Variables d'environnement pour Cloud Run (Production)

# Configuration serveur
PORT=8080
NODE_ENV=production

# CORS
CORS_ORIGINS=https://widget.salambot.app,https://desk.salambot.app

# Firebase
FIREBASE_API_KEY=${FIREBASE_API_KEY}
FIREBASE_PROJECT_ID=${FIREBASE_PROJECT_ID}
FIREBASE_AUTH_DOMAIN=${FIREBASE_PROJECT_ID}.firebaseapp.com

# JWT (Authentification)
JWT_PRIVATE_KEY=${JWT_PRIVATE_KEY}
JWT_PUBLIC_KEY=${JWT_PUBLIC_KEY}
JWT_EXPIRATION=3600 # 1 heure en secondes

# Persistence
PERSISTENCE_DRIVER=firestore

# OpenTelemetry
OTLP_ENDPOINT=${OTLP_ENDPOINT}
OTLP_HEADERS=${OTLP_HEADERS}
SERVICE_NAME=salambot-functions-run
SERVICE_VERSION=0.9.0

# WhatsApp
WA_VERIFY_TOKEN=${WA_VERIFY_TOKEN}
WA_PHONE_ID=${WA_PHONE_ID}
WA_ACCESS_TOKEN=${WA_ACCESS_TOKEN}
APP_SECRET=${APP_SECRET}

# Redis (Cache)
REDIS_URL=${REDIS_URL}
REDIS_TTL=300 # 5 minutes en secondes
