{
  "manifest_version": 3,
  "name": "SalamBot Mini-Bot",
  "version": "1.0.0",
  "description": "Extension Chrome pour SalamBot permettant l'auto-remplissage des champs dans les back-offices",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "offline_enabled": true
}
