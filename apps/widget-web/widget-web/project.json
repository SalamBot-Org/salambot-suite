{
  "name": "widget-web-widget-web",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/widget-web/widget-web",
  "projectType": "application",
  "tags": ["scope:widget-web", "type:app"],
  "targets": {
    "build": {
      "executor": "@nx/next:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/apps/widget-web/widget-web"
      },
      "configurations": {
        "development": {
          "outputPath": "apps/widget-web/widget-web"
        },
        "production": {}
      }
    },
    "serve": {
      "executor": "@nx/next:server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "widget-web-widget-web:build",
        "dev": true
      },
      "configurations": {
        "development": {
          "buildTarget": "widget-web-widget-web:build:development",
          "dev": true
        },
        "production": {
          "buildTarget": "widget-web-widget-web:build:production",
          "dev": false
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": [
          "apps/widget-web/widget-web/**/*.{ts,tsx,js,jsx}"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "passWithNoTests": true,
        "jestConfig": "apps/widget-web/widget-web/jest.config.ts"
      }
    }
  }
}
