{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "@salambot/functions-run",
  "version": "2.2.0",
  "description": "SalamBot API Gateway Enterprise - Gestion centralisÃ©e des microservices IA",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "tsx watch src/gateway/index.ts",
    "start": "node dist/gateway/index.js",
    "build": "tsc && tsc-alias",
    "build:watch": "tsc --watch",
    "test": "jest --config jest.basic.config.js",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --config jest.integration.final.config.js",
    "test:integration:watch": "jest --config jest.integration.config.js --watch",
    "test:integration:coverage": "jest --config jest.integration.config.js --coverage",
    "test:all": "npm run test:unit && npm run test:integration",
    "test:ci": "jest --ci --coverage --watchAll=false && jest --config jest.integration.config.js --ci --coverage --watchAll=false",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist",
    "gateway:dev": "tsx watch src/gateway/index.ts",
    "gateway:start": "node dist/gateway/index.js",
    "gateway:build": "tsc -p tsconfig.gateway.json",
    "benchmark": "artillery run tests/load/benchmark.yml",
    "stress-test": "artillery run tests/load/stress.yml",
    "install:deps": "pnpm install",
    "install:dev": "pnpm install --dev",
    "update:deps": "pnpm update",
    "mock:genkit": "node src/__tests__/mocks/genkit-mock.js",
    "mock:rest-api": "node src/__tests__/mocks/rest-api-mock.js",
    "mock:websocket": "node src/__tests__/mocks/websocket-mock.js",
    "mock:prometheus": "node src/__tests__/mocks/prometheus-mock.js",
    "mock:all": "concurrently \"pnpm run mock:genkit\" \"pnpm run mock:rest-api\" \"pnpm run mock:websocket\" \"pnpm run mock:prometheus\"",
    "mock:stop": "taskkill /F /IM node.exe /FI \"WINDOWTITLE eq *mock*\" 2>nul || true",
    "test:setup": "node scripts/setup-test-environment.js",
    "test:teardown": "pnpm run mock:stop",
    "test:unit": "jest --config jest.config.ts --testPathIgnorePatterns=\".*\\.integration\\.test\\..*\"",
    "test:clean": "rimraf coverage test-results node_modules/.cache"
  },
  "keywords": [
    "api-gateway",
    "microservices",
    "salambot",
    "ai",
    "express",
    "typescript",
    "enterprise",
    "monitoring",
    "security"
  ],
  "author": "SalamBot Platform Team <platform@salambot.ma>",
  "license": "PROPRIETARY",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.21.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "http-proxy-middleware": "^2.0.6",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "pino": "^8.16.2",
    "pino-pretty": "^10.2.3",
    "prom-client": "^15.1.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "ws": "^8.18.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/lodash": "^4.14.202",
    "@types/node": "^20.10.4",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^9.0.7",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "artillery": "^2.0.3",
    "concurrently": "^8.2.2",
    "eslint": "^8.55.0",
    "ioredis-mock": "^8.9.0",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.0",
    "redis-memory-server": "^0.10.0",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "tsc-alias": "^1.8.8",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "@typescript-eslint/recommended"
    ],
    "rules": {
      "@typescript-eslint/no-unused-vars": "error",
      "@typescript-eslint/no-explicit-any": "warn",
      "prefer-const": "error",
      "no-var": "error"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/salambot/salambot-suite.git",
    "directory": "apps/functions-run"
  },
  "bugs": {
    "url": "https://github.com/salambot/salambot-suite/issues"
  },
  "homepage": "https://docs.salambot.app/api-gateway"
}