/**
 * @file        Configuration du projet agent-desk pour Nx
 * @author      SalamBot Team (contact: info@salambot.ma)
 * @created     2025-05-25
 * @updated     2025-05-28
 * @project     SalamBot - AI CRM for Moroccan SMEs
 */
{
  "name": "agent-desk",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/agent-desk/src",
  "projectType": "application",
  "tags": [
    "scope:agent-desk",
    "type:app"
  ],
  "targets": {
    "build": {
      "executor": "@nx/next:build",
      "outputs": [
        "{options.outputPath}"
      ],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/apps/agent-desk"
      },
      "configurations": {
        "development": {
          "outputPath": "apps/agent-desk"
        },
        "production": {}
      }
    },
    "serve": {
      "executor": "@nx/next:server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "agent-desk:build",
        "dev": true
      },
      "configurations": {
        "development": {
          "buildTarget": "agent-desk:build:development",
          "dev": true
        },
        "production": {
          "buildTarget": "agent-desk:build:production",
          "dev": false
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": [
          "apps/agent-desk/**/*.{ts,tsx,js,jsx}"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "passWithNoTests": true,
        "jestConfig": "apps/agent-desk/jest.config.ts"
      }
    }
  }
}

