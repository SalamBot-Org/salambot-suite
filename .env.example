# SalamBot Suite Environment Variables
# Copy this file to .env and update the values

# Kong Gateway Configuration
KONG_ADMIN_URL=http://localhost:8001
KONG_PROXY_URL=http://localhost:8000
KONG_MANAGER_URL=http://localhost:8002

# Database Configuration
POSTGRES_USER=kong
POSTGRES_PASSWORD=kong
POSTGRES_DB=kong
POSTGRES_HOST=kong-database
POSTGRES_PORT=5432

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=salambot-redis-pass
REDIS_URL=redis://redis:6379

# Monitoring Configuration
PROMETHEUS_URL=http://localhost:9090
GRAFANA_URL=http://localhost:3001
GRAFANA_PASSWORD=admin

# SalamBot Functions Configuration
FUNCTIONS_PORT=3000
FUNCTIONS_HOST=functions-run
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRES_IN=24h

# Rate Limiting Configuration
RATE_LIMIT_MINUTE=100
RATE_LIMIT_HOUR=1000
RATE_LIMIT_DAY=10000

# CORS Configuration
CORS_ORIGINS=*
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Accept,Accept-Version,Content-Length,Content-MD5,Content-Type,Date,X-Auth-Token,Authorization

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Security Configuration
API_KEY_HEADER=X-API-Key
API_VERSION=v1

# Google Cloud Configuration (if using GCP)
# GOOGLE_CLOUD_PROJECT=your-project-id
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# Firebase Configuration (if using Firebase)
# FIREBASE_PROJECT_ID=your-firebase-project
# FIREBASE_PRIVATE_KEY=your-firebase-private-key
# FIREBASE_CLIENT_EMAIL=your-firebase-client-email

# Development Configuration
DEBUG=salambot:*
WATCH_FILES=true
HOT_RELOAD=true

# Production Configuration
# SSL_CERT_PATH=/path/to/ssl/cert.pem
# SSL_KEY_PATH=/path/to/ssl/key.pem
# ENABLE_HTTPS=true

# Metrics and Observability
METRICS_ENABLED=true
TRACING_ENABLED=true
HEALTH_CHECK_ENABLED=true

# Performance Configuration
WORKER_PROCESSES=auto
WORKER_CONNECTIONS=1024
KEEP_ALIVE_TIMEOUT=65
CLIENT_MAX_BODY_SIZE=1m

# Cache Configuration
CACHE_TTL=3600
CACHE_ENABLED=true

# Language Detection Configuration
LANG_DETECT_CONFIDENCE_THRESHOLD=0.8
LANG_DETECT_MAX_TEXT_LENGTH=10000

# AI/ML Configuration
AI_MODEL_TIMEOUT=30000
AI_MAX_TOKENS=2048
AI_TEMPERATURE=0.7